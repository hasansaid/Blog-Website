@model IEnumerable<MvcBlog.Models.Yorum>
@{ 
    Layout = null;
}
<div class="card my-4">
    <h5 class="card-header">Son Yapılan Yorumlar</h5>
    <div class="row">
        <div class="col-lg-12">
            <ul>
                @foreach (var item in Model)
                {
                    <li>@item.İcerik</li>
                }
            </ul>
        </div>
    </div>
</div>
